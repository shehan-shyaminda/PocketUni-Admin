<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddNewEvent"
    android:background="@color/white">

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Add New Event"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="63dp"
        android:layout_height="60dp"
        android:layout_marginStart="60dp"
        app:layout_constraintStart_toEndOf="@+id/textView20"
        app:srcCompat="@drawable/ic_calender"
        tools:layout_editor_absoluteY="34dp" />

    <Spinner
        android:id="@+id/spinnerBatch"
        android:layout_width="300dp"
        android:layout_height="63dp"
        android:layout_marginStart="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView21" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="60dp"
        android:text="Batch"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView20" />

    <EditText
        android:id="@+id/txtSubject"
        android:layout_width="300dp"
        android:layout_height="63dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="27dp"
        android:ems="10"
        android:hint="Subject"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerBatch" />

    <EditText
        android:id="@+id/txtLecturer"
        android:layout_width="300dp"
        android:layout_height="63dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="27dp"
        android:ems="10"
        android:hint="Lecturer"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtSubject" />

    <EditText
        android:id="@+id/txtLectureHall"
        android:layout_width="300dp"
        android:layout_height="63dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="27dp"
        android:ems="10"
        android:hint="Lecture Hall"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtLecturer" />

    <Button
        android:id="@+id/btnAddNewEvent"
        android:layout_width="300dp"
        android:layout_height="63dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="27dp"
        android:backgroundTint="#052FAD"
        android:text="ADD NEW EVENT"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtLectureHall" />


</androidx.constraintlayout.widget.ConstraintLayout>
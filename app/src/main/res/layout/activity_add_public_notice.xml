<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.AddPublicNoticeActivity">

    <ImageView
        android:id="@+id/btn_backAddPublicNotice"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/ic_menu_background"
        android:padding="5dp"
        android:src="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.libizo.CustomEditText
        android:id="@+id/notice_addTitlePublic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:hint="Notice Title"
        android:inputType="textPersonName"
        app:libIZO_setClearIconVisible="true"
        android:padding="15dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView16"
        app:libIZO_clearIconTint="@color/primary_blue"
        app:libIZO_setBorderColor="@color/primary_blue"
        app:libIZO_setBorderView="true"
        app:libIZO_setCornerRadius="5dp"
        app:libIZO_setStrokeWidth="1.5dp" />

    <com.libizo.CustomEditText
        android:id="@+id/notice_addTextPublic"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:gravity="top|left"
        android:hint="Notice"
        android:inputType="textPersonName"
        android:padding="15dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notice_addTitlePublic"
        app:libIZO_clearIconTint="@color/primary_blue"
        app:libIZO_setBorderColor="@color/primary_blue"
        app:libIZO_setBorderView="true"
        app:libIZO_setCornerRadius="5dp"
        app:libIZO_setStrokeWidth="1.5dp" />

    <Button
        android:id="@+id/btnAddPNotice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/custom_button_background"
        android:padding="15sp"
        android:text="Add Batch Notices"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notice_addTextPublic" />

    <ImageView
        android:id="@+id/imageView16"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_notifications"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_backAddPublicNotice" />
</androidx.constraintlayout.widget.ConstraintLayout>